<script>
    $(document).ready(function(e){
        init(e);
        function renderAll (){
            var published_promos = getPublishedPromotionsList().sortBy(function(o){ return o.start_date });
            var categories = getStoreCategories();
            var category_list = [];
            $.each( categories, function( key, val ){
                if (val.store_ids != null) {
                    category_list.push(val);
                } 
            });
            renderGeneral('#category_container', '#category_template', category_list);
            renderGeneral('#mobile_cat_list', '#category_template2', category_list);
            $('#mobile_cat_list').prepend('<option value="all" selected >All Categories</option>');
            show_cat_stores()
            
            if(published_promos.length > 0){
                renderPromotions("#promos_container","#promos_template", published_promos);
            } else {
                $('#no_promos').show();
                $('#promo_categories').hide();
            }
            show_content();
        }
        
		loadMallDataCached(renderAll); 
    })
</script>